:javascript
  $(document).ready(function() {
    $(".data-table").dataTable({
      "bPaginate": false,
      "aaSorting": [[0, 'desc']]
    });
  });

.grid_15

  %h3 
    Result Logs

  %table.data-table
    %thead
      %tr
        %th Path
    %tbody
      - for log in @logs
        %tr
          %td
            %a{ :href => log.remote_url }
              = log.display_name
