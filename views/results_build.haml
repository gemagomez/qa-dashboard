:javascript
  $(document).ready(function() {
    $(".data-table").dataTable({
      "bPaginate": false,
      "aaSorting": [[0, 'desc']]
    });
  });

.grid_15

  #breadcrumb
    %span.crumb
      %a{ :href => "/" }
        Smoke Testing
    %span.crumb-sep
      >>
    %span.crumb
      Build #{@build_id}

  %h3 Summary
  
  %table{ :border => 0 }
    %tr
      %td Total Tests Failed: 
      %td.num
        = @total_fail.to_s
    %tr
      %td Total Tests Skipped:
      %td.num
        = @total_skipped.to_s
    %tr
      %td Total Tests Run:
      %td.num
        = @total_tests.to_s 

  %h3 Graph
  %img{ :src => "/build/pie/#{@build_id}", :alt => "Results pie chart" }

  %h3 Jobs details

  %table.data-table.fullwidth
    %thead
      %tr
        %th test_suite
        %th variant
        %th arch
        %th job_name
        %th date
        %th #fail
        %th #skip
        %th #run
    %tbody
      - for result in @results_build
        %tr
          %td
            N/A
          %td
            = result.job.variant
          %td
            = result.job.arch
          %td
            %a{ :href => "http://jenkins.qa.ubuntu.com/", :target => "_blank" }
              = result.job.test
          %td
            = result.date
          %td.num
            = result.failcount
          %td.num 
            = result.skipcount
          %td.num
            = result.totalcount
