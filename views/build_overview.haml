%h2 Smoke testing
%table
  %tr
    %th Build
    %th Passed
    %th Failed/Skipped
    %th Total
    %th Pass Rate
    %th Bugs
  - for build in @builds
    %tr
      %td
        %a{ :href => "/build/#{build[:id]}" } 
          = build[:id]
      %td
        = build[:pass]
      %td
        = build[:fail]
      %td
        = build[:total]
      %td{ :class => "#{build[:color]}" }
        = format "%.0f", (build[:pass_rate]*100) 
        \%
      %td
        N/A
